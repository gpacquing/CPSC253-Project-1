{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++ build all files",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/*.cpp",  
                "-o",
                "${workspaceFolder}/a.out"   
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build all C++ files"
        }
    ]
}